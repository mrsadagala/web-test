---
import At from '../assets/outline/at-symbol.svg';
import Lock from '../assets/outline/lock-closed.svg';
---
<main class="flex items-center justify-center">

  <div class="border-2 rounded-lg border-slate-800 h-auto p-4 w-96 sm:w-1/3">


    <form action="POST" class="grid grid-cols-1 gap-10">

      <div class="flex flex-row space-x-5 mt-10">
        <img src={At.src} alt="Logo"width="32" height="32">
        <input id="Email" type="email" required autocomplete="off" placeholder="Enter Tmp Or Fresh Email" class="font-mono focus:outline-none focus:ring-1 focus:ring-cyan-500 rounded-lg p-2 text-white w-full font-semibold">
      </div>

      <div class="flex flex-row space-x-5 mt-10">
        <img src={Lock.src} alt="Logo"width="32" height="32">
        <input id="Password" type="password" required autocomplete="off" placeholder="Enter Strong Password " class="font-mono focus:outline-none focus:ring-1 focus:ring-cyan-500 rounded-lg p-2 text-white w-full font-semibold">
      </div>
      <button type="submit" class="p-4 text-white border border-slate-800 hover:bg-slate-800 font-semibold font-mono rounded-lg">Sign Up</button>
      
    </form>

  </div>

</main>
